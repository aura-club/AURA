rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Get user role from custom claims (NOT from Firestore to avoid circular dependency)
    function getUserRole() {
      return request.auth.token.role;
    }

    // Check if user is super admin
    function isSuperAdmin() {
      return isAuthenticated() && getUserRole() == 'super_admin';
    }

    // Check if user is admin or super admin
    function isAdmin() {
      return isAuthenticated() && (getUserRole() == 'admin' || getUserRole() == 'super_admin');
    }
    
    // Check if user is member or admin
    function isMemberOrAdmin() {
      return isAuthenticated() && (getUserRole() == 'member' || isAdmin());
    }

    // Rules for the 'users' collection - FIXED FOR APPROVAL
    match /users/{email} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated(); // Allow all authenticated users to update
    }
    
    // Rules for the 'alumni' collection
    match /alumni/{alumnusId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    // Rules for the 'alumniOpportunities' collection
    match /alumniOpportunities/{opportunityId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    // Rules for the 'leadership' collection
    match /leadership/{leaderId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    // Rules for the 'announcements' collection
    match /announcements/{announcementId} {
      allow read: if isAuthenticated();
      allow create, update, delete: if isAdmin();
    }

    // Rules for the 'projects' collection
    match /projects/{docId} {
      allow read: if true;
      allow create: if isMemberOrAdmin();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    // Rules for the 'resources' collection
    match /resources/{docId} {
      allow read: if true;
      allow create: if isMemberOrAdmin();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    // Rules for the 'opportunities' collection
    match /opportunities/{docId} {
      allow read: if true;
      allow create: if isMemberOrAdmin();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    // Rules for the 'blogPosts' collection
    match /blogPosts/{docId} {
      allow read: if true;
      allow create: if isMemberOrAdmin();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    // Rules for the 'products' collection
    match /products/{productId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    // Rules for the 'orders' collection
    match /orders/{orderId} {
      allow create: if isAuthenticated();
      allow read: if isAuthenticated();
      allow update: if isAuthenticated();
      allow delete: if isAdmin();
    }

  }
}
